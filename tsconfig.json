{
    "compilerOptions": {
        "outDir": "./build/",
        "baseUrl": ".",
        "paths": {
            "@src/*": ["./src/*"]
        },
        "noImplicitAny": true,
        "module": "ES6",
        "target": "ES2015",
        "allowJs": true,
        "moduleResolution": "node"
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["**/*.spec.ts"]
}
